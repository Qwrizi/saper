{
    static class Program
    {
        [STAThread]
        static void Main()
        {
            Application.EnableVisualStyles();
            Application.SetCompatibleTextRenderingDefault(false);
            Application.Run(new MainForm());
        }
    }
}


using System;
using System.Drawing;
using System.Windows.Forms;

namespace MinesweeperGame
{
    public partial class Form1 : Form
    {
        private int gridSize = 10; // –†–∞–∑–º–µ—Ä –ø–æ–ª—è (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é 10x10)
        private const int cellSize = 30; // –†–∞–∑–º–µ—Ä —è—á–µ–π–∫–∏ –≤ –ø–∏–∫—Å–µ–ª—è—Ö
        private int mineCount = 10; // –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –º–∏–Ω (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é - –ª–µ–≥–∫–æ)

        private Button[,] buttons;
        private bool[,] mines;
        private bool[,] revealed;
        private bool firstClick = true;
        private int flagsPlaced = 0;
        private DateTime startTime;
        private Timer gameTimer;
        private Label flagsLabel;
        private Label timeLabel;

        public Form1()
        {
            InitializeComponent();
            InitializeMenu();
            InitializeGame();
        }

        private void InitializeMenu()
        {
            // –°–æ–∑–¥–∞–µ–º –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é
            MenuStrip mainMenu = new MenuStrip();

            // –ú–µ–Ω—é "–ò–≥—Ä–∞"
            ToolStripMenuItem gameMenu = new ToolStripMenuItem("–ò–≥—Ä–∞");
            ToolStripMenuItem newGameItem = new ToolStripMenuItem("–ù–æ–≤–∞—è –∏–≥—Ä–∞", null, NewGame_Click);
            ToolStripMenuItem exitItem = new ToolStripMenuItem("–í—ã—Ö–æ–¥", null, Exit_Click);
            gameMenu.DropDownItems.Add(newGameItem);
            gameMenu.DropDownItems.Add(exitItem);

            // –ú–µ–Ω—é "–ù–∞—Å—Ç—Ä–æ–π–∫–∏"
            ToolStripMenuItem settingsMenu = new ToolStripMenuItem("–ù–∞—Å—Ç—Ä–æ–π–∫–∏");

            // –ü–æ–¥–º–µ–Ω—é "–†–∞–∑–º–µ—Ä –ø–æ–ª—è"
            ToolStripMenuItem sizeMenu = new ToolStripMenuItem("–†–∞–∑–º–µ—Ä –ø–æ–ª—è");
            ToolStripMenuItem smallSize = new ToolStripMenuItem("–ú–∞–ª–µ–Ω—å–∫–æ–µ (8x8)", null, (s, e) => SetGameSize(8));
            ToolStripMenuItem mediumSize = new ToolStripMenuItem("–°—Ä–µ–¥–Ω–µ–µ (10x10)", null, (s, e) => SetGameSize(10));
            ToolStripMenuItem largeSize = new ToolStripMenuItem("–ë–æ–ª—å—à–æ–µ (12x12)", null, (s, e) => SetGameSize(12));
            sizeMenu.DropDownItems.Add(smallSize);
            sizeMenu.DropDownItems.Add(mediumSize);
            sizeMenu.DropDownItems.Add(largeSize);

            // –ü–æ–¥–º–µ–Ω—é "–°–ª–æ–∂–Ω–æ—Å—Ç—å"
            ToolStripMenuItem difficultyMenu = new ToolStripMenuItem("–°–ª–æ–∂–Ω–æ—Å—Ç—å");
            ToolStripMenuItem easy = new ToolStripMenuItem("–õ–µ–≥–∫–æ", null, (s, e) => SetDifficultyEasy());
            ToolStripMenuItem medium = new ToolStripMenuItem("–°—Ä–µ–¥–Ω–µ", null, (s, e) => SetDifficultyMedium());
            ToolStripMenuItem hard = new ToolStripMenuItem("–°–ª–æ–∂–Ω–æ", null, (s, e) => SetDifficultyHard());
            difficultyMenu.DropDownItems.Add(easy);
            difficultyMenu.DropDownItems.Add(medium);
            difficultyMenu.DropDownItems.Add(hard);

            settingsMenu.DropDownItems.Add(sizeMenu);
            settingsMenu.DropDownItems.Add(difficultyMenu);

            // –î–æ–±–∞–≤–ª—è–µ–º –º–µ–Ω—é –Ω–∞ —Ñ–æ—Ä–º—É
            mainMenu.Items.Add(gameMenu);
            mainMenu.Items.Add(settingsMenu);
            this.Controls.Add(mainMenu);
            this.MainMenuStrip = mainMenu;
        }

        private void InitializeGame()
        {
            // –û—á–∏—â–∞–µ–º —Å—Ç–∞—Ä—ã–µ —ç–ª–µ–º–µ–Ω—Ç—ã —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
            if (buttons != null)
            {
                foreach (Button button in buttons)
                {
                    this.Controls.Remove(button);
                }
            }
            if (flagsLabel != null) this.Controls.Remove(flagsLabel);
            if (timeLabel != null) this.Controls.Remove(timeLabel);
            if (gameTimer != null) gameTimer.Stop();

            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –º–∞—Å—Å–∏–≤–æ–≤
            buttons = new Button[gridSize, gridSize];
            mines = new bool[gridSize, gridSize];
            revealed = new bool[gridSize, gridSize];
            flagsPlaced = 0;
            firstClick = true;

            // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ä–∞–∑–º–µ—Ä —Ñ–æ—Ä–º—ã
            int panelHeight = 40;
            this.ClientSize = new Size(gridSize * cellSize, gridSize * cellSize + panelHeight);
            this.FormBorderStyle = FormBorderStyle.FixedSingle;
            this.MaximizeBox = false;

            // –°–æ–∑–¥–∞–µ–º –ø–∞–Ω–µ–ª—å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏
            flagsLabel = new Label();
            UpdateFlagsLabel();
            flagsLabel.Font = new Font("Arial", 12, FontStyle.Bold);
            flagsLabel.ForeColor = Color.Red;
            flagsLabel.Location = new Point(10, 5);
            flagsLabel.Size = new Size(150, 30);
            this.Controls.Add(flagsLabel);

            timeLabel = new Label();
            timeLabel.Text = "–í—Ä–µ–º—è: 0";
            timeLabel.Font = new Font("Arial", 12, FontStyle.Bold);
            timeLabel.ForeColor = Color.Blue;
            timeLabel.Location = new Point(gridSize * cellSize - 100, 5);
            timeLabel.Size = new Size(100, 30);
            timeLabel.TextAlign = ContentAlignment.TopRight;
            this.Controls.Add(timeLabel);

            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º —Ç–∞–π–º–µ—Ä
            gameTimer = new Timer();
            gameTimer.Interval = 1000;
            gameTimer.Tick += GameTimer_Tick;

            // –°–æ–∑–¥–∞–µ–º –∫–Ω–æ–ø–∫–∏ –¥–ª—è –∫–∞–∂–¥–æ–π —è—á–µ–π–∫–∏
            for (int row = 0; row < gridSize; row++)
            {
                for (int col = 0; col < gridSize; col++)
                {
                    Button button = new Button();
                    button.Width = cellSize;
                    button.Height = cellSize;
                    button.Left = col * cellSize;
                    button.Top = row * cellSize + panelHeight;
                    button.Font = new Font("Arial", 12, FontStyle.Bold);
                    button.Tag = new Point(row, col);
                    button.MouseUp += Button_MouseUp;

                    buttons[row, col] = button;
                    this.Controls.Add(button);
                }
            }
        }

        private void UpdateFlagsLabel()
        {
            flagsLabel.Text = $"–§–ª–∞–≥–∏: {flagsPlaced}/{mineCount}";
        }

        private void GameTimer_Tick(object sender, EventArgs e)
        {
            TimeSpan elapsed = DateTime.Now - startTime;
            timeLabel.Text = $"–í—Ä–µ–º—è: {elapsed.Seconds}";
        }

        private void PlaceMines(int excludeRow, int excludeCol)
        {
            Random random = new Random();
            int minesPlaced = 0;

            while (minesPlaced < mineCount)
            {
                int row = random.Next(gridSize);
                int col = random.Next(gridSize);

                // –ù–µ —Å—Ç–∞–≤–∏–º –º–∏–Ω—É –Ω–∞ –ø–µ—Ä–≤—É—é –Ω–∞–∂–∞—Ç—É—é —è—á–µ–π–∫—É –∏ –≤–æ–∫—Ä—É–≥ –Ω–µ–µ
                if ((row == excludeRow && col == excludeCol) ||
                    (Math.Abs(row - excludeRow) <= 1 && Math.Abs(col - excludeCol) <= 1))
                {
                    continue;
                }

                if (!mines[row, col])
                {
                    mines[row, col] = true;
                    minesPlaced++;
                }
            }

            UpdateFlagsLabel();
        }

        private int CountAdjacentMines(int row, int col)
        {
            int count = 0;

            for (int r = Math.Max(0, row - 1); r <= Math.Min(gridSize - 1, row + 1); r++)
            {
                for (int c = Math.Max(0, col - 1); c <= Math.Min(gridSize - 1, col + 1); c++)
                {
                    if (mines[r, c]) count++;
                }
            }

            return count;
        }

        private void RevealCell(int row, int col)
        {
            if (row < 0 || row >= gridSize || col < 0 || col >= gridSize || revealed[row, col])
                return;

            revealed[row, col] = true;
            buttons[row, col].Enabled = false;

            // –ï—Å–ª–∏ –Ω–∞ —è—á–µ–π–∫–µ –±—ã–ª —Ñ–ª–∞–≥, —É–º–µ–Ω—å—à–∞–µ–º —Å—á–µ—Ç—á–∏–∫
            if (buttons[row, col].Text == "üö©")
            {
                flagsPlaced--;
                UpdateFlagsLabel();
            }

            if (mines[row, col])
            {
                // –ò–≥—Ä–æ–∫ –Ω–∞—Å—Ç—É–ø–∏–ª –Ω–∞ –º–∏–Ω—É
                buttons[row, col].Text = "üí£";
                GameOver(false);
                return;
            }

            int adjacentMines = CountAdjacentMines(row, col);
            if (adjacentMines > 0)
            {
                buttons[row, col].Text = adjacentMines.ToString();
                buttons[row, col].ForeColor = GetNumberColor(adjacentMines);
            }
            else
            {
                // –†–∞—Å–∫—Ä—ã–≤–∞–µ–º —Å–æ—Å–µ–¥–Ω–∏–µ –ø—É—Å—Ç—ã–µ —è—á–µ–π–∫–∏
                for (int r = row - 1; r <= row + 1; r++)
                {
                    for (int c = col - 1; c <= col + 1; c++)
                    {
                        RevealCell(r, c);
                    }
                }
            }

            CheckWin();
        }

        private Color GetNumberColor(int number)
        {
            switch (number)
            {
                case 1: return Color.Blue;
                case 2: return Color.Green;
                case 3: return Color.Red;
                case 4: return Color.DarkBlue;
                case 5: return Color.DarkRed;
                case 6: return Color.Teal;
                case 7: return Color.Black;
                case 8: return Color.Gray;
                default: return Color.Black;
            }
        }

        private void Button_MouseUp(object sender, MouseEventArgs e)
        {
            Button button = (Button)sender;
            Point position = (Point)button.Tag;
            int row = position.X;
            int col = position.Y;

            if (e.Button == MouseButtons.Left)
            {
                if (firstClick)
                {
                    PlaceMines(row, col);
                    firstClick = false;
                    startTime = DateTime.Now;
                    gameTimer.Start();
                }

                if (button.Text != "üö©") // –ù–µ –æ—Ç–∫—Ä—ã–≤–∞–µ–º —è—á–µ–π–∫–∏ —Å —Ñ–ª–∞–≥–∞–º–∏
                {
                    RevealCell(row, col);
                }
            }
            else if (e.Button == MouseButtons.Right)
            {
                if (!revealed[row, col])
                {
                    if (button.Text == "üö©")
                    {
                        button.Text = "";
                        flagsPlaced--;
                    }
                    else if (flagsPlaced < mineCount) // –ù–µ–ª—å–∑—è –ø–æ—Å—Ç–∞–≤–∏—Ç—å –±–æ–ª—å—à–µ —Ñ–ª–∞–≥–æ–≤, —á–µ–º –º–∏–Ω
                    {
                        button.Text = "üö©";
                        flagsPlaced++;
                    }
                    UpdateFlagsLabel();
                }
            }
        }

        private void CheckWin()
        {
            for (int row = 0; row < gridSize; row++)
            {
                for (int col = 0; col < gridSize; col++)
                {
                    if (!mines[row, col] && !revealed[row, col])
                    {
                        return; // –ï—Å—Ç—å –Ω–µ—Ä–∞—Å–∫—Ä—ã—Ç—ã–µ —è—á–µ–π–∫–∏ –±–µ–∑ –º–∏–Ω
                    }
                }
            }

            GameOver(true);
        }

        private void GameOver(bool isWin)
        {
            gameTimer.Stop();

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –≤—Å–µ –º–∏–Ω—ã
            for (int row = 0; row < gridSize; row++)
            {
                for (int col = 0; col < gridSize; col++)
                {
                    if (mines[row, col])
                    {
                        buttons[row, col].Text = "üí£";
                        buttons[row, col].Enabled = false;
                    }
                }
            }

            TimeSpan elapsed = DateTime.Now - startTime;
            string message = isWin
                ? $"–ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º! –í—ã –ø–æ–±–µ–¥–∏–ª–∏!\n–í—Ä–µ–º—è: {elapsed.TotalSeconds:F0} —Å–µ–∫—É–Ω–¥"
                : "–ò–≥—Ä–∞ –æ–∫–æ–Ω—á–µ–Ω–∞! –í—ã –ø—Ä–æ–∏–≥—Ä–∞–ª–∏!";

            MessageBox.Show(message, "–ò–≥—Ä–∞ –æ–∫–æ–Ω—á–µ–Ω–∞", MessageBoxButtons.OK, MessageBoxIcon.Information);
        }

        private void NewGame_Click(object sender, EventArgs e)
        {
            NewGame();
        }

        private void NewGame()
        {
            InitializeGame();
        }

        private void Exit_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void SetGameSize(int size)
        {
            gridSize = size;
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º —Ç–µ–∫—É—â–∏–π —É—Ä–æ–≤–µ–Ω—å —Å–ª–æ–∂–Ω–æ—Å—Ç–∏ –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏–∏ —Ä–∞–∑–º–µ—Ä–∞
            if (mineCount == 10) SetDifficultyEasy();
            else if (mineCount == 15) SetDifficultyMedium();
            else if (mineCount == 20) SetDifficultyHard();
            else SetDifficultyMedium(); // –ü–æ —É–º–æ–ª—á–∞–Ω–∏—é, –µ—Å–ª–∏ —á—Ç–æ-—Ç–æ –ø–æ—à–ª–æ –Ω–µ —Ç–∞–∫
        }

        private void SetDifficultyEasy()
        {
            mineCount = 10;
            NewGame();
        }

        private void SetDifficultyMedium()
        {
            mineCount = 15;
            NewGame();
        }

        private void SetDifficultyHard()
        {
            mineCount = 20;
            NewGame();
        }

        private void Form1_Load(object sender, EventArgs e)
        {

        }
    }
}
